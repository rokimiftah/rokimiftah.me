---
import "@styles/global.css";
import { SEO } from "astro-seo";
import { ClientRouter } from "astro:transitions";

type Props = {
	title: string;
	description: string;
};
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<SEO
			charset="UTF-8"
			title={title}
			description={description}
			extend={{
				meta: [
					{
						name: "viewport",
						content: "width=device-width,initial-scale=1",
					},
				],
				link: [
					{
						rel: "icon",
						href: "https://cdn.rokimiftah.me/framer-icon/dark.ico",
						media: "(prefers-color-scheme: dark)",
					},
					{
						rel: "icon",
						href: "https://cdn.rokimiftah.me/framer-icon/light.ico",
						media: "(prefers-color-scheme: light)",
					},
				],
			}}
		/>

		<ClientRouter />

		<script
			is:inline
			type="application/ld+json"
			set:html={JSON.stringify({
				"@context": "https://schema.org",
				"@type": "WebSite",
				name: title,
				url: Astro.site,
			})}
		/>
	</head>
	<body>
		<main>
			<slot />
		</main>
	</body>
</html>
