{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",

	"formatter": {
		"enabled": false
	},

	"linter": {
		"rules": {
			"recommended": true
		}
	},

	"overrides": [
		{
			"assist": {
				"actions": {
					"source": {
						"organizeImports": "off"
					}
				}
			},

			"includes": ["**/*.astro"],

			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},

					"correctness": {
						"noUnusedImports": "off",
						"noUnusedVariables": "off"
					}
				}
			}
		}
	]
}
